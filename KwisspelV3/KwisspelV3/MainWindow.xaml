<Window x:Class="KwisspelV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="525"
        DataContext="{Binding Main, Source={ StaticResource Locator} }">
    <StackPanel>

        <WrapPanel>
            <Label Content ="Vragen en Antwoord Beheer" Width="515"/>
            <Button Width="40" Command="{Binding ShowAddVraagCommand}" Content="+"/>
            <Label Content = "Vraag Toevoegen"/>
        </WrapPanel>
        <DataGrid SelectedItem="{Binding SelectedVraag}" AutoGenerateColumns="False" ItemsSource="{Binding Vragen}" CanUserAddRows="False" Height="100" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vraag" Binding="{Binding Tekst}" Width="300"></DataGridTextColumn>
                <DataGridTextColumn Header="Aantal antwoorden" Binding="{Binding AantalAntwoorden}"></DataGridTextColumn>
                <DataGridTextColumn Header="Delete" Binding="{Binding Categorie}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel>
            <TextBox Text="{Binding SelectedVraag.Tekst}" Width="515" Margin="0,10,0,10"> </TextBox>
            <Button Width="40" Command="{Binding ShowAddAntwoordCommand}" Content="+"/>
            <Label Content ="Antwoord Toevoegen"/>
        </WrapPanel>
        <DataGrid  SelectedItem="{Binding _selectedAntwoord}" AutoGenerateColumns="False" ItemsSource="{Binding VraagAntwoorden}" CanUserAddRows="False" Height="100" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tekst" Binding="{Binding Tekst}" Width="300"/>
                <DataGridTextColumn Header="Is Correct" Binding="{Binding BijVraagId}"/>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>

            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel>
            <Button Command="{Binding PlayCommand}" Content="Play!" Width="100" Margin="400,15,0,0"/>
        </WrapPanel>
    </StackPanel>
</Window>
