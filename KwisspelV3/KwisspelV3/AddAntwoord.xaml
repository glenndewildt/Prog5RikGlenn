<Window x:Class="KwisspelV3.AddAntwoord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddAntwoord" Height="300" Width="300"
        DataContext="{Binding Main, Source={ StaticResource Locator} }">


    <StackPanel>
        <TextBlock>Add Antwoord</TextBlock>

        <TextBlock Margin="20,10,24,0">Antwoord:</TextBlock>
        <TextBox Text="{Binding antwoord.Tekst}" Margin="20,10,24,0" Height="22"></TextBox>
       
        <Button Command="{Binding SaveAntwoordCommand}" Content="Antwoord Opslaan" Margin="20,10,24,0" RenderTransformOrigin="0.5,0.545"/>

    </StackPanel>
</Window>
