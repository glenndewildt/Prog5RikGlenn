<Window x:Class="KwisspelV3.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add GameWindow" Height="300" Width="300"
        DataContext="{Binding Main, Source={ StaticResource Locator} }">


    <StackPanel>
        <TextBlock Margin="35" Text="{Binding currentVraag.Tekst}"></TextBlock>

        <Button Margin="10" Content="{Binding gameAntwoorden[0].Tekst }" Command="{Binding eersteAntwoord}"></Button>

        <Button Margin="10" Content="{Binding gameAntwoorden[1].Tekst }" Command="{Binding Antwoord2}"></Button>

        <Button Margin="10" Content="{Binding gameAntwoorden[2].Tekst }" Command="{Binding Antwoord3}"></Button>

        <Button Margin="10" Content="{Binding gameAntwoorden[3].Tekst }" Command="{Binding Antwoord4}"></Button>

    </StackPanel>
</Window>
